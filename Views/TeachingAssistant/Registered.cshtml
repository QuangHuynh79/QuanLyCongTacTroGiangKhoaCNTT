                                    <th>Lớp HP</th>
                                    <th>Điểm số</th>
                                    <th>Trạng Thái</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in uts.ToList().OrderByDescending(o => o.ID))
                                {
                                    i++;
