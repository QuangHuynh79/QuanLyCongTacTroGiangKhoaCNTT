@using QuanLyCongTacTroGiangKhoaCNTT.Models
@{
    CongTacTroGiangKhoaCNTTEntities models = new CongTacTroGiangKhoaCNTTEntities();
    var lstHk = models.HocKy.ToList();
    var lstNganh = models.Nganh.ToList();

    ViewBag.Title = "Teaching Assistant";
    Layout = Session["layout"].ToString();

    var lstUs = models.TaiKhoan.ToList();
    int i = 0;

    int idtk = Int32.Parse(Session["user-id"].ToString());
    var tksv = models.TaiKhoan.Find(idtk);

    int id_hkGanNhat = 0;
    if (lstHk.Count > 0)
    {
        var hkGanNhat = lstHk.OrderByDescending(o => o.NgayBatDau).ToList().First();
        if (hkGanNhat == null)
        {
            id_hkGanNhat = lstHk.First().id;
        }
        else
        {
            id_hkGanNhat = hkGanNhat.id;
        }
    }

    int id_nganhCNTT = 0;
    if (lstNganh.Count > 0)
    {
        var nganhcntt = lstNganh.FirstOrDefault(f => f.TenNganh.ToLower().Equals("công nghệ thông tin"));
        if (nganhcntt != null)
        {
            id_nganhCNTT = nganhcntt.id;
        }
    }

    var lstTkb = models.ThoiKhoaBieu.Where(w => w.ID_HocKy == id_hkGanNhat && w.ID_Nganh == id_nganhCNTT).ToList();
}
<script src="~/ActiveItemMenu/TeachingAssistant/advances.js"></script>
<section class="container-fluid p-4">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-12">
            <!-- Page header -->
            <div class="border-bottom pb-3 mb-3 d-md-flex align-items-center justify-content-between">
                <div class="mb-3 mb-lg-0">
                    <h1 class="mb-0 h2 fw-bold">Danh Sách Đề Xuất Trợ Giảng</h1>
                    <!-- Breadcrumb -->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("index", "dashboard")">Trang chủ</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a>Trợ Giảng</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                Đề Xuất Trợ Giảng
                            </li>
                        </ol>
                    </nav>
                </div>
                <!-- button -->
                <div>
                    @*<a href="#" class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#themmoi">Thêm Trợ Giảng</a>*@
                </div>
            </div>
        </div>

    </div>

    <div class="row">
        <!-- basic table -->
        <div class="col-md-12 col-12 mb-5">
            <div class="card">
                <div class="card-header border-bottom-1 pt-3">
                    <div class="row">
                        <div class="mb-3 col-md-6 col-12 ">
                            <label class="form-label">Đợt đăng ký</label>
                            <select id="hocky" class="form-select" data-width="100%">
                                @foreach (var item in lstHk)
                                {
                                    if (item.TenHocKy.Equals("242"))
                                    {
                                        <option selected value="@item.id">Học kỳ @item.TenHocKy</option>
                                        continue;
                                    }
                                    <option value="@item.id">Học kỳ @item.TenHocKy</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3 col-md-6 col-12 ">
                            <label class="form-label">Ngành</label>
                            <select id="hocky" class="form-select" data-width="100%">
                                @foreach (var item in lstNganh)
                                {
                                    if (item.TenVietTat.Equals("CNTT"))
                                    {
                                        <option selected value="@item.id">@item.TenNganh</option>
                                        continue;
                                    }
                                    <option value="@item.id">@item.TenNganh</option>
                                }
                            </select>
                        </div>

                    </div>
                </div>
                <!-- table  -->
                <div class="card-body mt-3">
                    <div class="table-card">
                        <table id="dataTableBasic" class="table table-hover" style="width:100%">
                            <thead class="table-light">
                                <tr>
                                    <th class="text-nowrap">Lớp học phần</th>
                                    <th class="text-nowrap">Giảng Viên</th>
                                    <th class="text-nowrap">Lịch Học</th>
                                    <th class="text-nowrap">Số tiết</th>
                                    <th class="text-nowrap">Số SV</th>
                                    <th class="text-nowrap">Trạng thái</th>
                                    <th class="text-nowrap"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in lstTkb.ToList())
                                {
                                    <tr>
                                        <td valign="middle">
                                            Mã: @item.MaLHP
                                            <br />
                                            Tên: @item.HocPhan.TenHP
                                            <br />
                                            Loại: @if (item.LoaiHP.ToLower().Equals("lý thuyết"))
                                            {
                                                <span class="badge bg-success">@item.LoaiHP</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">@item.LoaiHP</span>
                                            }
                                        </td>
                                        <td valign="middle" class="text-nowrap">
                                            Mã: @item.MaCBGD
                                            <br />
                                            Tên: @item.TenCBGD
                                        </td>
                                        <td valign="middle">@(item.Thu); Tiết @(item.TietHoc); Tuần @(item.TuanBD) - @(item.TuanKT); Phòng @(item.Phong.TenPhong)</td>
                                        <td valign="middle">@item.SoTietDaXep</td>
                                        <td valign="middle">0</td>
                                        <td valign="middle" class="text-nowrap">
                                            <span class="badge bg-success"><i class="bi bi-check2-square me-2"></i>đã duyệt</span>
                                        </td>
                                        <td valign="middle" class="text-nowrap">
                                            <a style="font-size: 20px" data-bs-toggle="modal" data-bs-target="#apply" role="button" @*id="openSua-@item.ID" fullname="@item.Ma - @item.HoTen" name="@item.ID"*@ class="text-primary">
                                                <span data-bs-toggle="tooltip" data-bs-html="true" title="Xem chi tiết"><i class="bi bi-info-square me-2"></i></span>
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="apply" tabindex="-1" role="dialog" aria-labelledby="apply" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="applyTitle">Xét duyệt danh sách công việc được giao cho TA.</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"></span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <h5>Lớp HP: 221_71ITBS10103_01 - Nhập môn công nghệ thông tin</h5>
                            <h5>GV: Lê Thị Hồng</h5>
                        </div>
                        <div class="col-12">
                            <div class="">
                                <label class="form-label" for="lydo">Lý do đề xuất</label>
                                <div id="lydo" class="form-control" style="min-height: 120px">Khối lượng công việc cao cần TA hỗ trợ</div>
                            </div>
                        </div>
                        <div class="col-12">
                            <hr class="my-4" />
                        </div>
                        <div class="col-12 mb-3">
                            <h5 class="text-center" for="tennganh">BẢNG MÔ TẢ CÔNG VIỆC GIAO CHO TA</h5>
                        </div>
                        <div class="col-12">
                            <div class="table-card mt-0">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="pe-0 text-nowrap">TT</th>
                                            <th class="ps-3 text-nowrap">Mô tả công việc</th>
                                            <th style="max-width: 100px;" class="ps-3 text-nowrap">T.Gian</th>
                                            <th class="ps-3 text-nowrap">T.Gian hoàn thành</th>
                                            <th class="ps-3 text-nowrap">Nơi làm việc</th>
                                            <th class="ps-3 text-nowrap">Kết quả mong đợi</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int j = 1; j <= 3; j++)
                                        {
                                            <tr id="parent-@j" name="@j">
                                                <td valign="middle" class="pe-0 ps-3">
                                                    <div id="tt-@j" class="form-control">
                                                        @j
                                                    </div>
                                                </td>
                                                <td valign="middle" class="pe-0 ps-3">
                                                    <div class="form-control">Mô tả công việc @j</div>
                                                </td>
                                                <td valign="middle" style="width: 80px;" class="pe-0 ps-3">
                                                    <div class="form-control">@(j)h</div>
                                                </td>
                                                <td valign="middle" class="pe-0 ps-3">
                                                    <div class="form-control">Trước 0@(j)/10/2024</div>
                                                </td>
                                                <td valign="middle" class="pe-0 ps-3">
                                                    <div class="form-control">Tại nhà</div>
                                                </td>
                                                <td valign="middle" class="ps-3">
                                                    <div class="form-control">Hoàn thành công việc</div>
                                                </td>
                                            </tr>

                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button id="btnClose" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button id="btnSubmit" type="button" class="btn btn-primary">Duyệt công việc</button>
                </div>
            </div>
        </div>
    </div>
</section>
