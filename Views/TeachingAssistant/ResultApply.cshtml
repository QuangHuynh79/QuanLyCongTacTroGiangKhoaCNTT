@model IEnumerable<QuanLyCongTacTroGiangKhoaCNTT.Models.UngTuyenTroGiang>
@using QuanLyCongTacTroGiangKhoaCNTT.Models;
@{
    ViewBag.Title = "Kết quả đăng ký";
    Layout = Session["layout"].ToString();

    CongTacTroGiangKhoaCNTTEntities models = new CongTacTroGiangKhoaCNTTEntities();
    var lstNganh = models.Nganh.OrderByDescending(o => o.ID).ToList();
    var lstHocKy = models.HocKy.OrderByDescending(o => o.ID).ToList();

    var currentDate = Convert.ToDateTime(DateTime.Now.ToString("yyyy-MM-dd"));
    var currentYear = DateTime.Now.Year;

    var lstHk = models.HocKy.OrderByDescending(o => o.ID).ToList();
    int idhkGanNhat = 0;
    if (lstHk.Count > 0)
    {
        idhkGanNhat = lstHk.First().ID;
    }

    var formDky = models.FormDangKyTroGiang.FirstOrDefault(w => w.ID_HocKy == idhkGanNhat && w.Nganh.TenNganh.ToLower().Equals("công nghệ thông tin"));

    int idForm = 0;
    if (formDky != null)
    {
        idForm = formDky.ID;
    }
    var lstUt = Model.ToList().Where(w => w.ID_FormDangKyTroGiang == idForm).ToList();
}

<script src="~/ActiveItemMenu/TeachingAssistant/resultApply.js"></script>
<section class="container-fluid p-4">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-12">
            <!-- Page header -->
            <div class="border-bottom pb-3 mb-3 d-md-flex align-items-center justify-content-between">
                <div class="mb-3 mb-lg-0">
                    <h1 class="mb-0 h2 fw-bold">Kết quả đăng ký trợ giảng</h1>
                    <!-- Breadcrumb -->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("index", "dashboard")">Trang chủ</a>
                            </li>
                            <li class="breadcrumb-item" aria-current="page">
                                Trợ giảng
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                Kết quả đăng ký
                            </li>
                        </ol>
                    </nav>
                </div>
                <!-- button -->

            </div>
        </div>

    </div>

    <div class="row">
        <!-- basic table -->
        <div class="col-md-12 col-12 mb-5">
            <div class="card">
                <div class="card-header border-bottom-0 pb-0">
                    <div class="row">
                        <div class="mb-3 col-md-4 col-12">
                            <label class="form-label">Học kỳ</label>
                            <select id="hocky" class="form-select" data-width="100%">
                                @foreach (var item in lstHocKy)
                                {

                                    if (idhkGanNhat == item.ID)
                                    {
                                        <option selected value="@item.ID">Học kỳ @item.TenHocKy</option>
                                    }
                                    else
                                    {
                                        <option value="@item.ID">Học kỳ @item.TenHocKy</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="mb-3 col-md-4 col-12">
                            <label class="form-label">Ngành</label>
                            <select id="nganh" class="form-select" data-width="100%">
                                @foreach (var item in lstNganh)
                                {
                                    if (item.TenNganh.ToLower().Equals("công nghệ thông tin"))
                                    {
                                        <option selected value="@item.ID">@item.TenNganh</option>
                                    }
                                    else
                                    {
                                        <option value="@item.ID">@item.TenNganh</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <!-- table  -->
                <div class="card-body">
                    <div class="table-card">
                        <table id="dataTableBasic" class="table table-hover" style="width:100%">
                            <thead class="table-light">
                                <tr>
                                    <th class="text-nowrap">Mã LHP</th>
                                    <th class="text-nowrap">Tên HP</th>
                                    <th class="text-nowrap">Lịch Học</th>
                                    <th class="text-nowrap">Số tiết</th>
                                    <th class="text-nowrap">Trạng thái</th>
                                    <th class="text-nowrap"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in lstUt.ToList())
                                {
                                    <tr>
                                        <td valign="middle">@item.LopHocPhan.MaLHP</td>
                                        <td valign="middle">@item.LopHocPhan.TenHP</td>
                                        <td valign="middle">@(item.LopHocPhan.ThoiKhoaBieu.First().Thu); Tiết @(item.LopHocPhan.ThoiKhoaBieu.First().TietHoc); Tuần @(item.LopHocPhan.ThoiKhoaBieu.First().TuanBD) - @(item.LopHocPhan.ThoiKhoaBieu.First().TuanKT); Phòng @(item.LopHocPhan.ThoiKhoaBieu.First().Phong)</td>
                                        <td valign="middle">@item.LopHocPhan.ThoiKhoaBieu.First().SoTietDaXep</td>
                                        <td valign="middle" class="text-nowrap">
                                            @if (item.DanhGiaPhongVan.Count < 1)
                                            {
                                                <span class="badge bg-warning"><i class="bi bi-ban me-2"></i>Chưa phân công</span>
                                            }
                                            else
                                            {
                                                if (item.DanhGiaPhongVan.First().KetLuanDat == true)
                                                {
                                                    <span class="badge bg-success"><i class="bi bi-ban me-2"></i>Đã phân công</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning"><i class="bi bi-ban me-2"></i>Chưa phân công</span>
                                                }
                                            }
                                        </td>
                                        <td valign="middle" class="text-nowrap">
                                            <a style="font-size: 20px" data-bs-toggle="modal" data-bs-target="#apply" role="button" @*id="openSua-@item.ID" fullname="@item.Ma - @item.HoTen" name="@item.ID"*@ class="text-primary">
                                                <span data-bs-toggle="tooltip" data-bs-html="true" title="Xem danh sách công việc"><i class="bi bi-info-square me-2"></i></span>
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
