@model QuanLyCongTacTroGiangKhoaCNTT.Models.UngTuyenTroGiang

<div class="modal-body" id="content-partialDetail">
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label" for="hoten">Họ & Tên</label>
                <input disabled value="@Model.HoTen" type="text" id="hoten" class="form-control" placeholder="Nhập Họ & Tên">
                <span class="text-danger" id="valid-hoten"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label" for="ma">MSSV</label>
                <input disabled value="@Model.MSSV" name="@Model.ID" type="text" id="ma" class="form-control" placeholder="Nhập mã số sinh viên">
                <span class="text-danger" id="valid-ma"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label" for="dienthoai">Số điện thoại</label>
                <input disabled value="@Model.SoDienThoai" maxlength="10" data-type="numbers" type="tel" id="dienthoai" class="form-control" placeholder="09xxxxxxxx">
                <span class="text-danger" id="valid-dienthoai"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label" for="email">Email</label>
                <input disabled value="@Model.Email" type="text" id="email" class="form-control" placeholder="Nhập địa chỉ Email">
                <span class="text-danger" id="valid-email"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label" for="ngaysinh">Ngày sinh</label>
                <input disabled name="@Model.ID" value="@(Model.NgaySinh == null ? "" : Model.NgaySinh.Value.ToString("yyyy-MM-dd"))" type="text" id="ngaysinh" class="form-control" placeholder="Chọn ngày sinh">
                <span class="text-danger" id="valid-ngaysinh"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label" for="gioitinh">
                    Giới tính
                </label>
                <select disabled class="form-select" id="gioitinh">
                    @if (string.IsNullOrEmpty(Model.GioiTinh))
                    {
                        <option selected value="">---- Chọn giới tính ----</option>
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                    }
                    else if (Model.GioiTinh.Equals("Nam"))
                    {
                        <option value="">---- Chọn giới tính ----</option>
                        <option selected value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                    }
                    else
                    {
                        <option value="">---- Chọn giới tính ----</option>
                        <option value="Nam">Nam</option>
                        <option selected value="Nữ">Nữ</option>
                    }

                </select>
                <span class="text-danger" id="valid-gioitinh"></span>
            </div>
        </div>
        <div class="col-12">
            <div class="mb-3">
                <label class="form-label" for="tbctl">Lớp học phần</label>
                <input disabled type="text" id="tbctl" class="form-control" value="@Model.LopHocPhan.MaLHP - @Model.LopHocPhan.TenHP">
                <span class="text-danger" id="valid-tbctl"></span>
            </div>
        </div>
        <div class="col-12">
            <div class="mb-3">
                <label class="form-label" for="tbctl">Điểm trung bình chung tích lũy HK gần nhất</label>
                <input disabled type="text" id="tbctl" class="form-control" value="@Model.DiemTBTL" placeholder="Nhập điểm trung bình chung">
                <span class="text-danger" id="valid-tbctl"></span>
            </div>
        </div>
        <div class="col-12">
            <div class="mb-3">
                <label class="form-label" for="drl">Điểm rèn luyện HK gần nhất</label>
                <input disabled type="text" id="drl" class="form-control" value="@Model.DiemRL" placeholder="Nhập điểm rèn luyện">
                <span class="text-danger" id="valid-drl"></span>
            </div>
        </div>
        <div class="col-12">
            <div class="mb-3">
                <label class="form-label" for="dtk">Điểm tổng kết (thi lần 1) của học phần đăng ký làm TA</label>
                <input disabled type="text" id="dtk" class="form-control" value="@Model.DiemTKMH" placeholder="Nhập điểm tổng kết môn (thi lần 1)">
                <span class="text-danger" id="valid-dtk"></span>
            </div>
        </div>
        <div class="col-12">
            <label class="form-label" for="hinhanhmc">Hình ảnh minh chứng</label>
            <div class="row">
                @foreach (var item in Model.HinhAnhMinhChung.Split('#').ToList())
                {
                    <div class="col-4">
                        <div class="mb-3">
                            <!-- Gallery -->
                            <a href="@Url.Content(item)" class="glightbox" data-gallery="gallery1">
                                <img src="@Url.Content(item)" alt="image" class="img-fluid rounded-3 w-100 bg-light-secondary" />
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        const lightbox = GLightbox({ touchNavigation: !0, loop: !0, autoplayVideos: !0 });
    });
</script>