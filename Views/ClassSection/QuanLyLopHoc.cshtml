@using QuanLyCongTacTroGiangKhoaCNTT.Models;
@{
    ViewBag.Title = "Lớp học phần";
    Layout = Session["layout"].ToString();

    CongTacTroGiangKhoaCNTTEntities model = new CongTacTroGiangKhoaCNTTEntities();
    var lstNganh = model.Nganh.OrderByDescending(o => o.ID).ToList();
    var lstHocKy = model.HocKy.OrderByDescending(o => o.ID).ToList();

    int id_hkGanNhat = 0;
    if (lstHocKy.Count > 0)
    {
        var hkGanNhat = lstHocKy.OrderByDescending(o => o.NgayBatDau).ToList().First();
        if (hkGanNhat == null)
        {
            id_hkGanNhat = lstHocKy.First().ID;
        }
        else
        {
            id_hkGanNhat = hkGanNhat.ID;
        }
    }

    int id_nganhCNTT = 0;
    if (lstNganh.Count > 0)
    {
        var nganhcntt = lstNganh.FirstOrDefault(f => f.TenNganh.ToLower().Equals("công nghệ thông tin"));
        if (nganhcntt != null)
        {
            id_nganhCNTT = nganhcntt.ID;
        }
    }

    var lstTkb = model.ThoiKhoaBieu.Where(w => w.ID_HocKy == id_hkGanNhat && w.ID_Nganh == id_nganhCNTT).ToList();
}
<script src="~/ActiveItemMenu/ClassSection/index.js"></script>
<section class="container-fluid p-4">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-12">
            <!-- Page header -->
            <div class="border-bottom pb-3 mb-3 d-md-flex align-items-center justify-content-between">
                <div class="mb-3 mb-lg-0">
                    <h1 class="mb-0 h2 fw-bold">Quản Lý Lớp Học Phần</h1>
                    <!-- Breadcrumb -->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("index", "dashboard")">Dashboard</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                Lớp Học Phần
                            </li>
                        </ol>
                    </nav>
                </div>
                <!-- button -->

            </div>
        </div>

    </div>

    <div class="row">
        <!-- basic table -->
        <div class="col-md-12 col-12 mb-5">
            <div class="card">
                <div class="card-header border-bottom-0 pb-0">
                    <div class="row">
                        <div class="mb-3 col-md-4 col-12">
                            <label class="form-label">Học kỳ</label>
                            <select id="hocky" class="form-select" data-width="100%">
                                @foreach (var item in lstHocKy)
                                {

                                    if (id_hkGanNhat == item.ID)
                                    {
                                        <option selected value="@item.ID">Học kỳ @item.TenHocKy</option>
                                    }
                                    else
                                    {
                                        <option value="@item.ID">Học kỳ @item.TenHocKy</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <!-- table  -->
                <div class="card-body">
                    <div class="table-card">
                        <table id="dataTableBasic" class="table table-hover" style="width:100%">
                            <thead class="table-light">
                                <tr>
                                    <th class="text-nowrap">Mã LHP</th>
                                    <th class="text-nowrap">Tên HP</th>
                                    <th class="text-nowrap">Lịch Học</th>
                                    <th class="text-nowrap">Số SV</th>
                                    <th class="text-nowrap"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in lstTkb.ToList())
                                {
                                    <tr>
                                        <td>@item.LopHocPhan.MaLHP</td>
                                        <td>@item.LopHocPhan.TenHP</td>
                                        <td>@(item.Thu); Tiết @(item.TietHoc); Tuần @(item.TuanBD) - @(item.TuanKT); Phòng @(item.Phong)</td>
                                        <td>0</td>
                                        <td class="text-nowrap">
                                            <span data-bs-toggle="modal" data-bs-target="#diemdanh">
                                                <a style="font-size: 20px" role="button" data-bs-toggle="tooltip" data-bs-html="true" title="Điểm danh lớp học" class="text-primary">
                                                    <span><i class="bi bi-calendar3"></i></span>
                                                </a>
                                            </span>

                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="diemdanh" tabindex="-1" role="dialog" aria-labelledby="diemdanh" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="diemdanhTitle">Điểm danh LHP 221_71ITBS10103_01</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"></span>
                    </button>
                </div>
                <div class="modal-body overflow-x-hidden">
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="row">
                                <div class="col-6">
                                    <div class="mb-3">
                                        <select id="hocky" class="form-select w-auto">
                                            <option value="7">Thứ 2, Tiết 1 - 3, Tuần 5</option>
                                            <option value="7">Thứ 2, Tiết 1 - 3, Tuần 6</option>
                                            <option value="7">Thứ 2, Tiết 1 - 3, Tuần 7</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-6" style="display: flex; flex-direction: row; align-items: end">
                                    <div class="w-100 text-end">
                                        <a id="btnExportTkb" class="btn btn-outline-secondary">
                                            <i class="bi bi-file-earmark-arrow-down me-1"></i> Export
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <h5>Lớp HP: 221_71ITBS10103_01 - Nhập môn công nghệ thông tin</h5>
                            <h5>GV: Lê Thị Hồng</h5>
                            <h5>Sĩ Số: 20/20</h5>
                        </div>
                        <div class="col-12">
                            <hr class="my-4" />
                        </div>
                        <div class="col-12">
                            <div class="mb-4">
                                <h3 class="text-center mb-0" for="tennganh">DANH SÁCH SINH VIÊN - ĐIỂM DANH</h3>
                                <label class="small text-center w-100">(Bỏ chọn nếu sinh viên vắng mặt)</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="table-card">
                                <table id="diemDanhTable" class="table table-hover" style="width:100%">
                                    <thead class="table-light">
                                        <tr>
                                            <th>TT</th>
                                            <th>MSSV</th>
                                            <th>Họ và Tên</th>
                                            <th>Email</th>
                                            <th>Ngày sinh</th>
                                            <th>Giới tính</th>
                                            <th data-bs-toggle="tooltip" data-bs-html="true" title="Chọn nếu sinh viên có mặt">
                                                Đ.Danh
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 1; i <= 20; i++)
                                        {
                                            <tr>
                                                <td>@i</td>
                                                <td>MSSV@(i)</td>
                                                <td class="text-nowrap">Họ và tên của sinh viên @(i)</td>
                                                <td>Địa chỉ emial @(i)</td>
                                                <td>@DateTime.Now.ToString("dd/MM/yyyy")</td>
                                                <td>Giới tính</td>
                                                <td>
                                                    <div class="form-check form-switch">
                                                        <input checked="true" class="form-check-input" type="checkbox" role="switch">
                                                    </div>
                                                </td>
                                            </tr>

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btnClose" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button id="btnSubmit" type="button" class="btn btn-primary">Lưu thông tin</button>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/Validation/teacher/classsection/suggestedTA.js"></script>
<script>
    $(document).ready(function () {
        $("#diemDanhTable").DataTable({
            responsive: !0,
            pagingType: "numbers",
            pageLength: 100,
        });
    });
</script>