@model IEnumerable<QuanLyCongTacTroGiangKhoaCNTT.Models.CongViec>
@{
    var lstCv = Model.ToList();
}
<div class="modal-body" id="loadcontentviewtasklistmodal">
    <div class="row">
        <div class="col-12 mb-3">
            <h5 class="text-center" for="tennganh">BẢNG MÔ TẢ CÔNG VIỆC GIAO CHO TA</h5>
        </div>
        <div class="col-12">
            <div class="table-card mt-0">
                <table class="table table-hover" data-width="100%">
                    <thead class="table-light">
                        <tr>
                            <input hidden value="false" id="viewchixem" />
                            <input hidden value="@Model.First().ID_LopHocPhan" id="edit-idLHP" />
                            <th class="ps-3 text-nowrap">Mô tả công việc</th>
                            <th style="max-width: 120px;" class="ps-3 text-nowrap">Giờ quy đổi</th>
                            <th class="ps-3 text-nowrap">Thời hạn hoàn thành</th>
                            <th class="ps-3 text-nowrap">Nơi làm việc</th>
                            <th class="ps-3 text-nowrap">Kết quả mong đợi</th>
                            <th class="ps-3 pe-3 text-nowrap"></th>
                        </tr>
                    </thead>
                    <tbody id="contentAddTaskList">
                        @for (int i = 1; i <= lstCv.Count; i++)
                        {
                            <tr id="edit-tr-parent-@i" name="@i">
                                <td valign="middle" class="pe-0 ps-3">
                                    <textarea rows="1" type="text" id="edit-mota-@i" name="@i" class="form-control" placeholder="Mô tả tóm tắt công việc">@lstCv[i-1].MoTa</textarea>
                                    <span class="text-danger" id="valid-edit-mota-@i"></span>
                                </td>
                                <td valign="middle" style="width: 80px;" class="pe-0 ps-3">
                                    <input value="@lstCv[i-1].SoGioQuyDoi.ToString().Replace(",",".")" type="number" id="edit-khoiluong-@i" name="@i" class="form-control" placeholder="Số giờ" />
                                    <span class="text-danger" id="valid-edit-khoiluong-@i"></span>
                                </td>
                                <td valign="middle" class="pe-0 ps-3">
                                    <input value="@lstCv[i-1].ThoiHanHoanThanh.ToString("yyyy-MM-dd")" type="date" id="edit-thoigian-@i" name="@i" class="form-control flatpickr" placeholder="Chọn hạn hoàn thành" />
                                    <span class="text-danger" id="valid-edit-thoigian-@i"></span>
                                </td>
                                <td valign="middle" class="pe-0 ps-3">
                                    <textarea rows="1" type="text" id="edit-noilamviec-@i" name="@i" class="form-control" placeholder="Giảng đường, tại nhà...">@lstCv[i-1].NoiLamViec</textarea>
                                    <span class="text-danger" id="valid-edit-noilamviec-@i"></span>
                                </td>
                                <td valign="middle" class="pe-0 ps-3">
                                    <textarea rows="1" type="text" id="edit-ketqua-@i" name="@i" class="form-control" placeholder="Kết quả công việc">@lstCv[i-1].KetQuaMongDoi</textarea>
                                    <span class="text-danger" id="valid-edit-ketqua-@i"></span>
                                </td>
                                <td valign="middle" class="ps-3 pe-3">
                                    <a role="button" id="edit-btnXoa-@i" name="@i" class="text-danger form-control">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>

                        }
                        <tr id="edit-row-append">
                            <td colspan="7" class="text-center">
                                <a id="edit-addRow" data-bs-toggle="tooltip" data-bs-html="true" title="Thêm hàng mới" class="btn btn-sm btn-secondary">
                                    <i style="font-size: 18px" class="bi bi-plus-square-dotted"></i>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $('body').find('.flatpickr').flatpickr({ locale: 'vn' });
    $('body').find('[id="btnviewtasklistmodalSubmit"]').prop('hidden', false);
    $('body').find('[id="formCamKet"]').prop('hidden', false);
</script>