@model IEnumerable<QuanLyCongTacTroGiangKhoaCNTT.Models.UngTuyenTroGiang>
@{ 
    var ut = Model.ToList();
}
<div class="card-body" id="filterLoad">
    <div class="row">
        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
            <div class="card mb-4">
                <!-- Card body -->
                <div class="card-body d-flex flex-column gap-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="lh-1 d-flex flex-column gap-1">
                            <h2 class="h1 fw-bold mb-0">@ut.GroupBy(g => g.ID_TaiKhoan).Count()</h2>
                            <span>Đã Đăng Ký</span>
                        </div>
                        <div>
                            <span class="bg-light-primary icon-shape icon-xl rounded-3 text-dark-primary">
                                <i style="font-size: 24px" class="bi bi-person-rolodex"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
            <div class="card mb-4">
                <!-- Card body -->
                <div class="card-body d-flex flex-column gap-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="lh-1 d-flex flex-column gap-1">
                            <h2 class="h1 fw-bold mb-0">@ut.Where(w => w.TrangThai == true).GroupBy(g => g.ID_TaiKhoan).Count()</h2>
                            <span>Được Duyệt</span>
                        </div>
                        <div>
                            <span class="bg-light-primary icon-shape icon-xl rounded-3 text-dark-primary">
                                <i style="font-size: 24px" class="bi bi-person-rolodex"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
            <div class="card mb-4">
                <!-- Card body -->
                <div class="card-body d-flex flex-column gap-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="lh-1 d-flex flex-column gap-1">
                            <h2 class="h1 fw-bold mb-0">@ut.Where(w => w.LopHocPhan.PhanCongTroGiang.FirstOrDefault(wl => wl.ID_TaiKhoan == w.ID_TaiKhoan) != null).ToList().GroupBy(g => g.ID_TaiKhoan).Count()</h2>
                            <span>Đã Phân Công</span>
                        </div>
                        <div>
                            <span class="bg-light-primary icon-shape icon-xl rounded-3 text-dark-primary">
                                <i style="font-size: 24px" class="bi bi-person-rolodex"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
