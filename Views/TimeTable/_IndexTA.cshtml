@using QuanLyCongTacTroGiangKhoaCNTT.Models;
@{
    CongTacTroGiangKhoaCNTTEntities model = new CongTacTroGiangKhoaCNTTEntities();
    var lstNganh = model.Nganh.OrderByDescending(o => o.id).ToList();
    var lstHocKy = model.HocKy.OrderByDescending(o => o.id).ToList();

    var currentDate = DateTime.Now;
    var currentYear = DateTime.Now.Year;

    int id_hkGanNhat = 0;
    if (lstHocKy.Count > 0)
    {
        var hkGanNhat = lstHocKy.OrderByDescending(o => o.NgayBatDau).ToList().First();
        id_hkGanNhat = hkGanNhat.id;
    }

    int id_nganhCNTT = 0;
    if (lstNganh.Count > 0)
    {
        var nganhcntt = lstNganh.FirstOrDefault(f => f.TenNganh.ToLower().Equals("công nghệ thông tin"));
        if (nganhcntt != null)
        {
            id_nganhCNTT = nganhcntt.id;
        }
    }

    var lstTkb = model.ThoiKhoaBieu.Where(w => w.ID_HocKy == id_hkGanNhat && w.ID_Nganh == id_nganhCNTT).ToList();

    int tuanMin = lstTkb.Min(m => m.TuanBD);
    int tuanMax = lstTkb.Max(m => m.TuanKT);
}

<div class="card" id="pageload">
    <!-- card header  -->
    <div class="card-header border-bottom-0 pb-0">
        <div class="row">
            <div class="mb-3 col-md-6 col-12">
                <label class="form-label">Học kỳ</label>
                <select id="" class="form-select" data-width="100%">
                    @foreach (var item in lstHocKy)
                    {

                        if (id_hkGanNhat == item.id)
                        {
                            <option selected value="@item.id">Học kỳ @item.TenHocKy</option>
                        }
                        else
                        {
                            <option value="@item.id">Học kỳ @item.TenHocKy</option>
                        }
                    }
                </select>
            </div>
            <div class="mb-3 col-md-6 col-12">
                <label class="form-label">Tuần học</label>
                <select id="" class="form-select" data-width="100%">
                    @for (int i = tuanMin; i <= tuanMax; i++)
                    {
                        <option selected value="@i">Tuần @i</option>

                    }
                </select>
            </div>
        </div>
    </div>
    <div id="filterParentLoad">
        <div class="card-header border-bottom-0 pt-0">
            <div class="row">
                <div class="mb-3 col-md-3 col-12">
                    <label class="form-label">Chú thích</label>
                    <div class="form-control">
                        <span class="badge bg-warning me-2">Thực hành</span><span class="badge bg-success">Lý thuyết</span>
                    </div>
                </div>
                <div class="mb-3 col-md-3 col-12">
                    <label class="form-label">Lọc môn học</label>
                    <select class="form-select" id="locmonhoc" placeholder="Lọc giảng viên" multiple="multiple">
                        @foreach (var item in lstTkb.GroupBy(o => o.MaMH).ToList())
                        {
                            var items = item.Select(s => new { s.HocPhan.TenHP, s.MaMH }).First();
                            <option selected value="@items.MaMH">@items.TenHP</option>
                        }
                    </select>
                </div>
                <div class="mb-3 col-md-3 col-12">
                    <label class="form-label">Lọc giảng viên</label>
                    <select class="form-select" id="locgiangvien" placeholder="Lọc giảng viên" multiple="multiple" filter="true">
